{#
/**
 * @file
 * Template for the main page.
 */
#}
<div class="page">
  {% embed '@multiplex/navbar/navbar.twig' with {
    placement: 'sticky-top py-0',
    container: 'fixed',
  } %}
    {% block social %}
      {% if page.navbar_social %}
        {{ page.navbar_social }}
      {% endif %}
    {% endblock %}

    {% block left %}
      {% if page.navbar_left %}
        {{ page.navbar_left }}
      {% endif %}
    {% endblock %}

    {% block right %}
      {% if page.navbar_right %}
        {{ page.navbar_right }}
      {% endif %}
    {% endblock %}
  {% endembed %}


  {% embed '@multiplex/navbar/navbar-secondary.twig' with {
    placement: 'py-1',
  } %}
    {% block branding %}
      {% if page.navbar_branding %}
        {{ page.navbar_branding }}
      {% endif %}
    {% endblock %}
    {% block secondary %}
      {% if page.navbar_secondary %}
        {{ page.navbar_secondary }}
      {% endif %}
    {% endblock %}
  {% endembed %}

  <main>
    {% if page.header %}
      <header class="page__header">
        <div class="container">
          {{ page.header }}
        </div>
      </header>
    {% endif %}

    {% if page.content %}
      <div class="page__content">
        <div class="container">
          {{ page.content }}
        </div>
      </div>
    {% endif %}
  </main>

  {% if (page.footer or page.footer_copyright) %}
    <footer class="page__footer">
      {% if page.footer %}
        <div class="container px-0 py-3">
          <div class="d-flex flex-column flex-lg-row">
            {{ page.footer }}
          </div>
        </div>
      {% endif %}
      {% if page.footer_copyright %}
        <div class="footer_copyright py-3">
          <div class="container">
            <div class="d-flex justify-content-center footer_copyright">
              {{ page.footer_copyright }}
            </div>
          </div>
        </div>
      {% endif %}
    </footer>
  {% endif %}
</div>
